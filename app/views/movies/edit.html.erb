<%= form_tag('/movies/#{@mov.id}', method: 'POST') do %>

  <input name="_method" type="hidden" value="put">

  <label for="title">Title:</label>
  <input type="text" id="title" value='<%= @mov.title %>' name="movie[title]">

  <label for="title">Subtitle:</label>
  <input type="text" id="subtitle" value='<%= @mov.subtitle %>' name="movie[subtitle]">

  <label for="description">Description:</label>
  <input type="text" id="description" value='<%= @mov.description %>' name="movie[description]">

  <label for="youtube_id">Video ID:</label>
  <input type="text" id="video_id" value='<%= @mov.video_id %>' name="movie[video_id]">

  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">

  <input type="submit" value="submit">
<% end %>
  <%= link_to 'Delete Movie',movie_path(@mov.id), :method =>:delete%>