<%= form_tag('/videos/#{@video.id}', method: 'POST') do %>

  <input name="_method" type="hidden" value="put">

  <label for="title">Title:</label>
  <input type="text" id="title" value='<%= @video.title %>' name="video[title]">

  <label for="title">Video ID:</label>
  <input type="text" id="youtube_id" value='<%= @video.youtube_id %>' name="video[youtube_id]">

  <label for="title">Description</label>
  <input type="text" id="description" value='<%= @video.description %>' name="video[description]">

  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">

  <input type="submit" value="submit">
<% end %>
  <%= link_to 'Delete Video',video_path(@video.id), :method =>:delete%>