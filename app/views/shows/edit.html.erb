<form action=<%= "/shows/#{params[:id]}" %> method="post">
  <!-- This is needed because the browser does not support PUT in a form -->
  <!-- However, if Rails sees this input, it will treat it as a PUT request -->
  <!-- (this is normally generated by the built-in form_tag helper method) -->
  <input name="_method" type="hidden" value="put">

  <label for="title">Title:</label>
  <input type="text" id="title" value='<%= @prog.title %>' name="show[title]">

  <label for="title">Subtitle:</label>
  <input type="text" id="subtitle" value='<%= @prog.subtitle %>' name="show[subtitle]">

  <label for="description">Description:</label>
  <input type="text" id="description" value='<%= @prog.description %>' name="show[description]">

  <label for="youtube_id">Video ID:</label>
  <input type="text" id="video_id" value='<%= @prog.video_id %>' name="show[video_id]">

  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">

  <input type="submit" value="submit">
</form>
  <%= link_to 'Delete Show',show_path(@prog.id), :method =>:delete%>